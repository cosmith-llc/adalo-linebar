{
    "name": "LineBar",
    "displayName": "Line Bar",
    "description": "A customizable line bar component",
    "defaultWidth": 300,
    "defaultHeight": 60,
    "icon": "./thumbnail.png",
    "props": [
      {
        "name": "label",
        "type": "text",
        "displayName": "Label",
        "description": "The label for the line bar",
        "default": "Permanent"
      },
      {
        "name": "labelFontWeight",
        "displayName": "Label Font Weight",
        "type": "number",
        "control": {
          "type": "menu",
          "options": [
            { "label": "Light", "value": 300 },
            { "label": "Normal", "value": 400 },
            { "label": "Medium", "value": 500 },
            { "label": "Semi Bold", "value": 600 },
            { "label": "Bold", "value": 700 },
            { "label": "Extra Bold", "value": 800 },
            { "label": "Black", "value": 900 }
          ]
        },
        "default": 400
      },
      {
        "name": "labelFontSize",
        "type": "number",
        "displayName": "Label Font Size",
        "description": "Font size of the label text",
        "default": 16,
        "control": {
          "type": "slider",
          "min": 1,
          "max": 100
          }
      },
      {
        "name": "labelColor",
        "type": "color",
        "displayName": "Label Color",
        "description": "Color of the label text",
        "default": "#000000"
      },
      {
        "name": "weekTotalText",
        "type": "text",
        "displayName": "Week Total Text",
        "description": "Text for Week Total",
        "default": "Week Total"
      },
      {
        "name": "weekTotalFontWeight",
        "displayName": "Week Total Font Weight",
        "type": "number",
        "control": {
          "type": "menu",
          "options": [
            { "label": "Light", "value": 300 },
            { "label": "Normal", "value": 400 },
            { "label": "Medium", "value": 500 },
            { "label": "Semi Bold", "value": 600 },
            { "label": "Bold", "value": 700 },
            { "label": "Extra Bold", "value": 800 },
            { "label": "Black", "value": 900 }
          ]
        },
        "default": 400
      },
      {
        "name": "weekTotalFontSize",
        "type": "number",
        "displayName": "Week Total Font Size",
        "description": "Font size of the Week Total text",
        "default": 16,
        "control": {
          "type": "slider",
          "min": 1,
          "max": 100
          }
      },
      {
        "name": "weekTotalColor",
        "type": "color",
        "displayName": "Week Total Color",
        "description": "Color of the Week Total text",
        "default": "#000000"
      },
      {
        "name": "todayText",
        "type": "text",
        "displayName": "Today Text",
        "description": "Text for Today",
        "default": "Today"
      },
      {
        "name": "todayFontWeight",
        "displayName": "Today Font Weight",
        "type": "number",
        "control": {
          "type": "menu",
          "options": [
            { "label": "Light", "value": 300 },
            { "label": "Normal", "value": 400 },
            { "label": "Medium", "value": 500 },
            { "label": "Semi Bold", "value": 600 },
            { "label": "Bold", "value": 700 },
            { "label": "Extra Bold", "value": 800 },
            { "label": "Black", "value": 900 }
          ]
        },
        "default": 700
      },
      {
        "name": "todayFontSize",
        "type": "number",
        "displayName": "Today Font Size",
        "description": "Font size of the Today text",
        "default": 14,
        "control": {
          "type": "slider",
          "min": 1,
          "max": 100
        }
      },
      {
        "name": "todayColor",
        "type": "color",
        "displayName": "Today Color",
        "description": "Color of the Today text",
        "default": "#FFFFFF"
      },
      {
        "name": "startColor",
        "type": "color",
        "displayName": "Progress Bar Start Color",
        "description": "Start color of the progress bar gradient",
        "default": "#a0c1e8"
      },
      {
        "name": "endColor",
        "type": "color",
        "displayName": "Progress Bar End Color",
        "description": "End color of the progress bar gradient",
        "default": "#628ac5"
      },
      {
        "name": "today",
        "type": "number",
        "displayName": "Today",
        "description": "The number for today",
        "default": 20
      },
      {
        "name": "total",
        "type": "number",
        "displayName": "Total Weeks",
        "description": "The total number of weeks for the progress bar",
        "default": 34
      }
    ]
  }